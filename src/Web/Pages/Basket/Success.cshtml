@page "{handler?}"
@model SuccessModel
@{
    ViewData["Title"] = "Thank you";
}
<section class="esh-catalog-hero">
    <div class="container">
        <img class="esh-catalog-title" src="~/images/main_banner_text.png" />
    </div>
</section>

<div class="container">
    <h1>Thanks for your Order!</h1>

    <p>
        Thank you for shopping at eSHOP OnWeb
    </p>

    <p>
        A receipt (#@Model.ApprovalCode) has automatically been sent to your e-mail address.
    </p>

    <a asp-page="/Index">Continue Shopping...</a>
</div>